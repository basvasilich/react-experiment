space-switcher()
  unit = 0.5rem
  activeColor = #4a96ba
  linkColor = #333
  backgroundColor = #fff
  hlColor = yellow

  .space-switcher__toggler:after
    content: '\02C7'
    font-size: 4*unit
    position: relative
    top: 2*unit
    display: inline-block
    width: 3*unit
    text-align: center

  .space-switcher.is-opened .space-switcher__toggler:after
    transform: rotate(180deg)
    top: -(unit)

  .space-switcher.is-opened .space-switcher__toggler
    display: inline-block
    padding: 0 unit unit unit
    margin: -(unit)
    margin-top: 0
    background-color:  backgroundColor
    color: linkColor

  .header__a
    color: backgroundColor
    text-decoration: none

  .is-active .space-switcher__organisation-title
  .is-active.space-switcher__space
    background-color: lighten(activeColor, 70%)

  .is-hidden
    display: none

  .space-switcher
    color: #333
    position: relative

  .space-switcher__body
    display: none
    line-height: 3*unit
    position: absolute
    top: 100%
    left: -(unit)
    padding: 0 unit
    margin-top: unit
    box-shadow: 0 2px 2px rgba(0, 0, 0, 0.3)

  .space-switcher.is-opened .space-switcher__body
    display: block

  .space-switcher__a
    text-decoration: none
    color: #333

  .space-switcher__form
    border-bottom: 1px solid lighten(linkColor, 70%)
    padding: 2*unit  unit
    margin: -(unit)
    margin-top: 0
    margin-bottom: 0
    background-color:  backgroundColor

  .space-switcher__search-text
    width: 100%
    box-sizing: border-box
    
  .space-switcher__list
    background-color:  backgroundColor
    overflow-y: scroll
    padding: 0
    margin: -(unit)
    margin-top: 0
    margin-bottom: 0

  .space-switcher__organisation
    padding-left: 5*unit
    border-bottom: 1px solid lighten(linkColor, 70%)
    background-position: unit unit
    background-repeat: no-repeat
    background-size: 3*unit 3*unit

    
  .space-switcher__organisation-title
  .space-switcher__spaces
    border-left: 1px solid lighten(linkColor, 70%)

  .space-switcher__organisation-title
    padding: unit
    line-height: 2*unit
    color: activeColor
    font-weight: bold

  .space-switcher__space
    padding:  0.5*unit 2*unit

  .space-switcher__organisation-title b
  .space-switcher__space-title b
    background-color: hlColor

space-switcher()
